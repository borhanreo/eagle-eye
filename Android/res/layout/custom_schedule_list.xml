<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/customSchCard"
        android:clickable="true"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/customLin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:background="#e1dedd"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/idText"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="32dp"
                    android:textColor="#000000"
                    android:text="ID: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e1dedd"
                    android:padding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nameText"
                    android:text="Name: "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFE1DEDD"
                    android:padding="5dp" />
                <TextView
                    android:id="@+id/dateText"
                    android:text="Date: "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFCFCFCF"
                    android:padding="5dp" />
                <TextView
                    android:padding="5dp"
                    android:text="Drone Start Time: "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/startText"
                    android:background="#FFE1DEDD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="5dp"
                    android:text="Drone Fly Time: "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/flyText"
                    android:background="#FFCFCFCF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="5dp"
                    android:text="Flight End Time: "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/endText"
                    android:background="#FFE1DEDD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="5dp"
                    android:text="Distance: "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/distanceText"
                    android:background="#cfcfcf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>