<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pitchBar"
        android:layout_marginTop="10dp"
        android:progress="50"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rollBar"
        android:layout_marginTop="10dp"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/throttleBar"
        android:layout_marginTop="10dp"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yawBar"
        android:layout_marginTop="10dp"
        />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBarRadio5"
        android:layout_marginTop="10dp"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBarRadio6"
        android:layout_marginTop="5dp"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBarRadio7"
        android:layout_marginTop="5dp"
        />
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleSeekBarRadio8"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lay001">
            <Button
                android:id="@+id/stabilize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green"
                android:layout_weight="0.25"
                android:text="Stab"/>

            <Button
                android:id="@+id/guided"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green"
                android:layout_weight="0.25"
                android:text="GUI"/>
            <Button
                android:id="@+id/land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue"
                android:layout_weight="0.25"
                android:text="Land"/>
            <Button
                android:id="@+id/auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue"
                android:layout_weight="0.25"
                android:text="A_HLD"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/armed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue"
                android:layout_weight="0.25"
                android:text="ARMD"/>

            <Button
                android:id="@+id/disarmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red"
                android:layout_weight="0.25"
                android:text="DARMD"/>
            <Button
                android:id="@+id/yaw_inc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green"
                android:layout_weight="0.25"
                android:text="YAW I"/>

            <Button
                android:id="@+id/yaw_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green"
                android:layout_weight="0.25"
                android:text="YAW D"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green"
                android:id="@+id/roll_inc"
                android:layout_weight="0.25"
                android:text="RI" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green"
                android:id="@+id/roll_dec"
                android:layout_weight="0.25"
                android:text="RD" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue"
                android:id="@+id/pitch_inc"
                android:layout_weight="0.25"
                android:text="PI" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue"
                android:id="@+id/pitch_dec"
                android:layout_weight="0.25"
                android:text="PD" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue"
                android:id="@+id/throttle_in"
                android:layout_weight="0.25"
                android:text="TRL I" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue"
                android:id="@+id/throttle_de"
                android:layout_weight="0.25"
                android:text="TRL D" />

            <Button
                android:id="@+id/progress50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green"
                android:layout_weight="0.25"
                android:text="Fly"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green"
                android:layout_weight="0.25"
                android:id="@+id/obj_en"
                android:text="En/Den" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>